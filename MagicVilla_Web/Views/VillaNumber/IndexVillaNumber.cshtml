@model IEnumerable<MagicVilla_Web.Models.Dtos.VillaNumberDto>

@{
    ViewData["Title"] = "Villa Number List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">Villa Number List</h2>
        <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary">
            <i class="bi bi-plus-square-fill"></i> Create New Villa Number
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th> Villa Name</th>
                <th>Villa Number</th>
                <th>Actions</th> <!-- تعديل العنوان -->
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Villa.Name</td>
                    <td>@villa.VillaNo</td>
                    <td>
                        <!-- زرار التعديل بعد التعديل -->
                        <a asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-villaNo="@villa.VillaNo" class="btn btn-warning">
                            <i class="bi bi-pencil-fill"></i>
                        </a>


                        <!-- زرار الحذف -->
                        <a asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-villaNo="@villa.VillaNo" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
