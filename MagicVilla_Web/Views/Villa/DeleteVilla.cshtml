@model MagicVilla_Web.Models.Dtos.VillaDto

@{
    ViewData["Title"] = "DeleteVilla";
}

<h2 class="text-primary text-center mb-4">Delete Villa</h2>

<form method="post" asp-action="DeleteVilla">
    <!-- Hidden input for Id -->
    <input asp-for="Id" type="hidden" />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rate" class="form-label"></label>
                <input asp-for="Rate" disabled type="number" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Details" class="form-label"></label>
                <textarea asp-for="Details" disabled class="form-control"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" disabled type="url" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Accupancy" class="form-label"></label>
                <input asp-for="Accupancy" disabled type="number" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sqft" class="form-label"></label>
                <input asp-for="Sqft" disabled type="number" class="form-control" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Amenity" class="form-label"></label>
                <input asp-for="Amenity" disabled class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="IndexVilla" class="btn btn-primary w-50 me-2">⬅️ Back to List</a>

                <button type="submit" value="Delete" class="btn btn-danger w-50 ms-2">✏️ Update</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

